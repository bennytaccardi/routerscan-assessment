model Transaction {
  id            Int      @id @default(autoincrement())
  timestamp     DateTime
  status        Boolean
  block_number  Int 
  tx_index      Int     
  from          String
  to            String  
  value         Decimal @db.Decimal(30,0)  
  gas_limit     Int     
  gas_used      Int     
  gas_price     Decimal @db.Decimal(30,0)

  @@index([from, block_number, tx_index])

  @@index([to, block_number, tx_index])

  @@index([value(sort: Desc)])

  @@unique([block_number, tx_index])
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://myuser:mypassword@localhost:5432/transactions_db?schema=public"
}
